type Query{
    getOrder(id: ID!): OrderView
}

type OrderView {
  id: ID
  date: String
  items: [OrderItemView]
}

type OrderItemView {
  quantity: Int
  product: ProductView
}

type ProductView {
  id: ID
  name: String
  price: Float
}

input OrderItemInput {
  productId: ID!
  quantity: Int!
}

input OrderInput {
  customerId: ID!
  items: [OrderItemInput!]!
}

type Mutation {
  publishOrder(input: OrderInput!): ID
}

type Subscription {
  orderStatusChanged(orderId: ID!): OrderView
}